1.1
log
@move into plugin
@
text
@a48 15
    " find top dir
    function! s:gototopdir()
       let i = 1
       while i < 10
          if filereadable("tags") || isdirectory(".git")
            echo "Found top dir"
            return
          else
            lcd ..
            let i += 1
          endif
       endwhile
    endfunction
    nnoremap <Plug>GotoTopDir :call <SID>gototopdir()<CR>

a96 1

a98 24
    function! s:toggleBG()
        let l:tbg = &background
        " Inversion
        if l:tbg == "dark"
            set background=light
        else
            set background=dark
        endif
    endfunction
    nnoremap <Plug>ToggleBG  :call <SID>toggleBG()<CR>

    " Change between relativenumber and nonumber
    function! s:toggleNumber()
        let l:tbg = &relativenumber
        " Inversion
        if l:tbg == 1
            set norelativenumber
            set nonumber
        else
            set number
            set relativenumber
        endif
    endfunction
    nnoremap <Plug>ToggleNumber :call <SID>toggleNumber()<CR>
@

