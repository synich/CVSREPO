function minijs(fname)
  local fin = io.open(fname, "r")
  local oname = fname:gsub(".js$", ".min.js")
  local fout = io.open(oname, "w")
  for li in fin:lines() do
    li = li:gsub("//.*", "")
    li = li:gsub("^ +", "")
    fout:write(li)
  end
  fin:close()
  fout:close()
end

minijs("sep.js")
