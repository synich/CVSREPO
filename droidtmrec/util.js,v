function saveDraft() {
  var txt = getElemValue("eNow");
  var pct = "tag=draft|ctx="+encodeURI(txt);
  var day = getElemValue("eDay");
  var saveTo = curDay();
  // save to another day, avoid of overwrite
  saveTo = saveTo.replace(/\d$/, day);
  var fdb = getElemValue("eDb");
